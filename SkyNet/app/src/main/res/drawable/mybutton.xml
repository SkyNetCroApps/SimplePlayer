<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
 <item android:state_pressed="true" >
     <shape android:shape="rectangle"  >
         <corners android:radius="30dip" />
         <stroke android:width="1dip" android:color="#cc0000" />
         <gradient android:angle="-90" android:startColor="#990000" android:endColor="#ff1919"  />
     </shape>
 </item>
<item android:state_focused="true">
     <shape android:shape="rectangle"  >
         <corners android:radius="30dip" />
         <stroke android:width="1dip" android:color="#cc0000" />
         <solid android:color="#ff1919"/>
     </shape>
 </item>
<item >
    <shape android:shape="rectangle"  >
         <corners android:radius="30dip" />
         <stroke android:width="1dip" android:color="#cc0000" />
         <gradient android:angle="-90" android:startColor="#ff4d4d" android:endColor="#ff1919" />
     </shape>
 </item>
</selector>