<?xml version="1.0" encoding="utf-8"?>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="50px"
        android:paddingLeft="20px"
        android:paddingRight="20px"
        android:weightSum="1"
        android:background="@color/lightgray">

    <com.google.android.youtube.player.YouTubePlayerView
        android:id="@+id/player_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Play"
        android:id="@+id/button_play"
        android:background="@drawable/mybutton"
        android:layout_alignTop="@+id/button_pause"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pause"
        android:id="@+id/button_pause"
        android:background="@drawable/mybutton"
        android:layout_above="@+id/button_skip"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="39dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Stop"
        android:id="@+id/button_stop"
        android:background="@drawable/mybutton"
        android:layout_alignTop="@+id/button_pause"
        android:layout_alignRight="@+id/player_view"
        android:layout_alignEnd="@+id/player_view" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Skip"
        android:id="@+id/button_skip"
        android:background="@drawable/mybutton"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="194dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/text_skip"
        android:layout_gravity="center_horizontal"
        android:hint="@string/skip"
        android:background="@drawable/rounded_edittext_states"
        android:paddingLeft="20px"
        android:singleLine="true"
        android:layout_alignBottom="@+id/button_skip"
        android:layout_toRightOf="@+id/button_skip"
        android:layout_toEndOf="@+id/button_skip" />


</RelativeLayout>

